<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/naruto" />

        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="140dp"
                android:text="Raon Lee"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:text="Kanashimi Wo Yasashisa Ni"
                android:textSize="24sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/btn_facebook"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/facebook" />

            <ImageButton
                    android:id="@+id/btn_instagram"
                    android:layout_width="89dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ig" />
        </LinearLayout>

        <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="130dp"
                android:text="MP3 Player"
                android:textColor="#0F0909"
                android:textSize="24sp" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/btn_play"
                    android:layout_width="127dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/play" />

            <ImageButton
                    android:id="@+id/btn_pause"
                    android:layout_width="118dp"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/jeda" />

            <ImageButton
                    android:id="@+id/btn_stop"
                    android:layout_width="124dp"
                    android:layout_height="79dp"
                    android:layout_weight="1"
                    android:cropToPadding="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/stop" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>